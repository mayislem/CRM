@model IEnumerable<Solution.Presentation.Models.OrderVm>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AngieLayout.cshtml";
}

<h2>Your Products</h2>

<p>
    @Html.ActionLink("Continue Shopping", "Index","Product")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price
        </th>
        <th>
            Order Date
        </th>
        <th>
            Product Quantity
        </th>
        <th>
            Total Price
        </th>
        @*<th>
            Total
        </th>*@
    </tr>
    @{ 
        int Total = 0;
    }

@foreach (var item in Model) {

    int TotalPrice = Convert.ToInt32(item.ProductQuantity * item.Price);
    Total = Convert.ToInt32(Total + TotalPrice);

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductQuantity)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductId, idu=item.UserId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductId, idu=item.UserId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductId, idu=item.UserId })
        </td>
    </tr>
}
    <tr>
        <td colspan="5" class="text-right"><b> total : @Total </b></td>
    <</tr>>

</table>

<a href="@Url.Action("ExportPDF","Order","GetOrder")">Get Invoice </a>
